{
  "request": {
    "method": "POST",
    "urlPath": "/mcp/context7",
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.method == 'ping')]"
      }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": ["response-template"],
    "body": "{\"jsonrpc\": \"2.0\", \"id\": {{jsonPath request.body '$.id'}}, \"result\": {}}"
  }
}
